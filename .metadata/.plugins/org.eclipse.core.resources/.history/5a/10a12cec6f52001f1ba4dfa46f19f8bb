package com.aurionpro.tictactoe.model;

import java.util.Scanner;

public class TicTacToe {
	Board board;
	boolean gameOver = false;
	char player = 'X';
	Scanner scanner = new Scanner(System.in);
	char[][] updateBoard = board.getBoard();

	public char[][] getUpdateBoard() {
		return updateBoard;
	}

	public void mainLogic(Board rows, Board columns) {
		while (!gameOver) {
			board.printBoard();
			System.out.println("Player " + player + "'s turn: ");
			System.out.println("Enter row and column: ");
			// System.out.println("Enter row: ");
			int row = scanner.nextInt();
			// System.out.println("Enter Column: ");
			int column = scanner.nextInt();

			

			if (updateBoard[row][column] == '-') {
				updateBoard[row][column] = player;
				gameOver = haveWon(column, updateBoard);
				if (gameOver) {
					System.out.println(player + " won");
					board.printBoard();
				} else {
					if (player == 'X') {
						player = '0';
					} else {
						player = 'X';
					}
				}

			} else {
				System.out.println("Invalid Move by " + player + "Try Again");
			}
		}

	}

	private boolean haveWon(int rows) {
		for (int i = 0; i < rows; i++) {
			if ((updateBoard[i][0] == player && updateBoard[i][1] == player && updateBoard[i][2] == player)
					|| (updateBoard[0][i] == player && updateBoard[1][i] == player && updateBoard[2][i] == player)
					|| (updateBoard[0][0] == player && updateBoard[1][1] == player && updateBoard[2][2] == player)
					|| (updateBoard[0][2] == player && updateBoard[1][1] == player && updateBoard[2][0] == player))
				return true;
		}
		return false;
	}

}

