package com.aurionpro.tictactoe.model;

import java.util.Scanner;

public class TicTacToe {
	int rows = 3;
	int columns = 3;
	char board1[][] = new char[rows][columns];
	
	public void initializeBoard() {
		for (int i = 0; i < rows; i++) {
			for (int j = 0; j < columns; j++) {
				board1[i][j] = '-';
			}
		}
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	private MarkType markType;
	Scanner scanner = new Scanner(System.in);
	Players player = new Players("S", MarkType.X);
	String board[][] = new String[3][3];
	
	

	public String[][] getBoard() {
		return board1;
	}
	

	public void setBoard(String[][] board) {
		this.board1 = board;
	}

	public void boardCreation() {
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				board1[i][j] = "-";
			}
		}
	}

	public void boardPrint() {
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				System.out.print(board1[i][j]);
				// System.out.print(i);
				// System.out.print(j);
				// System.out.print(board[i][j]);
				System.out.print(" ");
			}
			System.out.println();
		}
	}
	

	public void boardStringValueMatch() {
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				board1[i][j] = scanner.next();
				if (board1[i][j] == "X") {
System.out.println(board1[i][j]);
				}
			}
		}
	}

}
