package com.aurionpro.structural.decorator.model;

public class GoldenHat extends HatDecorator{

	public GoldenHat(IHat hat) {
		super(hat);
		// TODO Auto-generated constructor stub
	}

	@Override
	public String getName() {
		String name = null;
		if(hat.getName().equals("Standard Hat") || hat.getName().equals("Premium Hat")) {
			name = hat.getName()+" with "+"Golden Special Edition.";
			return name;
			}
		if(hat.getName().equals("Standard Hat with Ribboned Hat Edition")) {
			name = hat.getName()+" and "+"Golden Special Edition.";
			return name;
		}
		return name;
//		return hat.getName()+" is upgraded now to "+"Golden Hat";
	}

	@Override
	public int getPrice() {
		return 1000+hat.getPrice();
		
	}

	@Override
	public String getDescription() {
		// TODO Auto-generated method stub
		System.out.println("Congratulations on giving your cap a new golden look");
		return "Golden Hat with Golden Feature on it.";
	}

	@Override
	public String toString() {
		return "Name=" + getName() + "\nPrice=" + getPrice()
				+ "\nDescription=" + getDescription();
	}
	


}
