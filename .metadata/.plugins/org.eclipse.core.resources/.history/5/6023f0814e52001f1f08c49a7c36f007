package com.aurionpro.tictactoe.test;

import java.util.Scanner;

public class TicTacToeTest {
public static void main(String[] args) {
	Scanner scanner = new Scanner(System.in);
	
	int rows = 3;
	int columns = 3;
	char board[][] = new char[rows][columns];
	
	for(int i = 0; i<rows; i++) {
		for(int j=0; j<columns;j++) {
			board[i][j] = 'k';
		}
	}

	
	char player = 'X';
	boolean gameOver = false;
	
	while(!gameOver) {
		printBoard(board);
		System.out.println("Player"+ player+" Enter rows and column: ");
		System.out.println("Enter row: ");int row = scanner.nextInt();
		System.out.println("Enter Column: ");int column = scanner.nextInt();
		
	}

}

public static void printBoard(char[][] board) {
	for(int i = 0; i< 3; i++) {
	for(int j=0; j< 3;j++) {
		System.out.print(board[i][j]);
	}
	System.out.println();
}
	
}
}
