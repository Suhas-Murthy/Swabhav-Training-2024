package com.aurionpro.tictactoe.model;

import java.util.Scanner;

public class TicTacToe {
	private MarkType markType;
	Scanner scanner = new Scanner(System.in);
	Players player = new Players("S", MarkType.X);
	String board[][] = new String[3][3];

	public void boardCreation() {
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				board[i][j] = "-";
			}
		}
	}

	public void boardPrint() {
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				System.out.print(board[i][j]);
				// System.out.print(i);
				// System.out.print(j);
				// System.out.print(board[i][j]);
				System.out.print(" ");
			}
			System.out.println();
		}
	}

	public void boardStringValueMatch() {
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				board[i][j] = scanner.next();
				if (board[i][j] == "X") {
System.out.println(board[i][j]);
				}
			}
		}
	}

}
